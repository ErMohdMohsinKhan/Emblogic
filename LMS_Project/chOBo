#include "headers.h"
#include "classes.h"
#include "declarations.h"
int Book::checkOutBooks()
{
        cout<<__func__<<" : Begin"<<endl;
        Book buk;
        int pos, count, i;
        i = 0;
	int size;
        int posArray[10];
        char title[SIZE];
        memset(title, '\0', SIZE);
        char author[SIZE];
        memset(author, '\0', SIZE);
        fstream file;
        file.open("bookinv.txt", ios::in|ios::out|ios::binary);
        if (!file)
        {
                cerr << "Error opening the file for reading!" << endl;
                return 1;
        }
        file.read(reinterpret_cast<char*>(&count),sizeof(count));
        file.seekg(8, ios::beg);
        file>>count;
        cout<<__func__<<": Count -> "<<count<<endl;
        file.seekg(11, ios::beg);
	cin.ignore();
        cout<<__func__<<" : Please enter Title of the Book : "<<endl;
        cin.get(title, SIZE);
        cin.ignore();
        cout<<__func__<<" : Please enter Author of the Book : "<<endl;
        cin.get(author, SIZE);
        cout<<__func__<<" : Title you entered : "<<title<<endl;
        while(!file.eof())
        {
        //      posArray[i] = file.tellg();
        //      posArray[i] = posArray[i] - 2;
        //      cout<<"Pos : "<<posArray[i]<<endl;
	  	cout<<"Inside while"<<endl;    

                file.read(reinterpret_cast<char*>(&buk), sizeof(Book));
                pos = file.tellg();
                cout<<"Pos : "<<pos<<endl;
		size = sizeof(Book);
                cout<<"Size of Book "<<size<<endl;
              //  file.seekg(pos+2, ios::beg);
                cout<<title<<endl;
                if (strcmp(buk.title, title) == 0)  //Comparison
                {
                        cout<<__func__<<" : Title is matched "<<endl<<endl;
                        //pos = file.tellg();
                //      pos = posArray[i] + 2;
                //      cout<<"Pos : "<<pos<<endl;
                //      file.seekp(pos, ios::beg);
                //      pos = file.tellg();
                        cout<<"Pos : "<<pos+2<<endl;
                        //file.seekp(pos+2, ios::beg);
                        if(buk.state == 0)
                        {
                                buk.state = CHK_OUT;
                        }
                        else if(buk.state == 1)
                        {
                                buk.state = ON_SHLF;
                        }
                        cout<<__func__<<" : Status : "<<buk.state<<endl;
                //      file.seekg(-pos * sizeof(Book), ios::cur);
                //      pos = file.tellg();
                //      cout<<"Pos : "<<pos<<endl;
                        pos = pos - size;
                        cout<<"Pos - 2 "<<pos-2<<endl;
                        file.seekp(pos, ios::beg);
                        file.write(reinterpret_cast<char*>(&buk),sizeof(Book));
                        cout<<buk;
                        return 0;
                }
                if(pos == -1)
                        return 0;
                i++;
        }
        file.close();
        cout<<__func__<<" : End"<<endl;
        return 0;
}
